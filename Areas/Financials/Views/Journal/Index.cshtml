@model IEnumerable<FinanceSubstantialApp.Models.JournalEntry>

@{
    ViewData["Title"] = "General Ledger";
}

<h1>General Ledger</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Journal Entry</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Account</th>
            <th>Description</th>
            <th class="text-end">Debit</th>
            <th class="text-end">Credit</th>
        </tr>
    </thead>
    <tbody>
        <!-- The @foreach loop displays the data. If Model is empty, nothing shows here. -->
        @foreach (var item in Model) {
            <tr>
                <td>@item.TransactionDate.ToShortDateString()</td>
                <td>@Html.DisplayFor(modelItem => item.Account.AccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="text-end">@item.Debit.ToString("C")</td>
                <td class="text-end">@item.Credit.ToString("C")</td>
            </tr>
        }
    </tbody>
